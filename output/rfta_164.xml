                            endTime="00:24:05">
            <pbcore:pbcoreIdentifier source="local">2021_02_03_Rivera_Christian_Q12</pbcore:pbcoreIdentifier>
            <pbcore:pbcoreTitle>Do you recall any specific interactions with people at Rocky Top?</pbcore:pbcoreTitle>
            <pbcore:pbcoreDescription>Question 12</pbcore:pbcoreDescription>
