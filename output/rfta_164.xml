         <pbcore:pbcorePart partType="Interview Questions"
                            startTime="00:04:38"
                            endTime="00:04:55">
            <pbcore:pbcoreIdentifier source="local">2021_02_03_Rivera_Christian_Q4</pbcore:pbcoreIdentifier>
            <pbcore:pbcoreTitle>Were you at home with your parents at the time?</pbcore:pbcoreTitle>
            <pbcore:pbcoreDescription>Question 4</pbcore:pbcoreDescription>
         </pbcore:pbcorePart>
         <pbcore:pbcorePart partType="Interview Questions"
                            startTime="00:04:55"
                            endTime="00:05:39">
            <pbcore:pbcoreIdentifier source="local">2021_02_03_Rivera_Christian_Q5</pbcore:pbcoreIdentifier>
            <pbcore:pbcoreTitle>Can you tell us where in the Gatlinburg area you were living at the time?</pbcore:pbcoreTitle>
            <pbcore:pbcoreDescription>Question 5</pbcore:pbcoreDescription>
         </pbcore:pbcorePart>
