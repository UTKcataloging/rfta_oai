                            startTime="00:50:48"
                            endTime="00:51:18">
            <pbcore:pbcoreIdentifier source="local">2021_02_03_Rivera_Christian_Q21</pbcore:pbcoreIdentifier>
            <pbcore:pbcoreTitle>Has your father's health recovered?</pbcore:pbcoreTitle>
            <pbcore:pbcoreDescription>Question 21</pbcore:pbcoreDescription>
         </pbcore:pbcorePart>
