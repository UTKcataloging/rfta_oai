                            startTime="00:42:50"
                            endTime="00:45:41">
            <pbcore:pbcoreIdentifier source="local">20201026_Cole_Charlie_Q26</pbcore:pbcoreIdentifier>
            <pbcore:pbcoreTitle>Is there anything else surprising or good that came out of this event?</pbcore:pbcoreTitle>
            <pbcore:pbcoreDescription>Question 26</pbcore:pbcoreDescription>
