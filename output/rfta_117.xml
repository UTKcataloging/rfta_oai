                            endTime="00:42:01">
            <pbcore:pbcoreIdentifier source="local">20201026_Cole_Charlie_Q24</pbcore:pbcoreIdentifier>
            <pbcore:pbcoreTitle>Can you talk about what Fire Wise is for people who aren't familiar?</pbcore:pbcoreTitle>
            <pbcore:pbcoreDescription>Question 24</pbcore:pbcoreDescription>
         </pbcore:pbcorePart>
         <pbcore:pbcorePart partType="Interview Questions"
                            startTime="00:42:01"
                            endTime="00:42:50">
            <pbcore:pbcoreIdentifier source="local">20201026_Cole_Charlie_Q25</pbcore:pbcoreIdentifier>
            <pbcore:pbcoreTitle>How did the fires shape community relations?</pbcore:pbcoreTitle>
            <pbcore:pbcoreDescription>Question 25</pbcore:pbcoreDescription>
         </pbcore:pbcorePart>
